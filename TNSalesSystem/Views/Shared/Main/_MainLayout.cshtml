@using TNSalesSystem.Domain.Menu;
@using System.Collections;
<!DOCTYPE html>
@{
    IList<LeftMainMenu> MenuList = (IList<LeftMainMenu>)Session["LeftMenuList"];
}
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <link href="~/Content/Home/styles.css" rel="stylesheet" />
</head>
<body>

    <div id="container">
        <header>
            <div class="width">
                <div style="background-image: url('/Content/images/TamilNadu_Logo.png'); width: 268px; float: left; height: 100px; background-size: 120px 100px; background-repeat: no-repeat; margin-top: -42px;">
                </div>
                <h1><span>Tamilnadu Sales System</span></h1>
                <div style="float: right; color: white;">Hi Ganesh&nbsp;|&nbsp;Admin&nbsp;|&nbsp;Logout&nbsp;</div>
            </div>
        </header>
        <nav>
            <div class="width">
                @foreach (LeftMainMenu Menu in MenuList)
                {
                    <ul>
                        <li class=""><a href="@Menu.MainURLLink">@Menu.MenuName</a></li>
                    </ul>
                }
            </div>
        </nav>
        <div id="body" class="width">
            @RenderBody()
            <aside class="sidebar">
                <ul>
                    <li>
                        <h4>Intlization</h4>
                        <ul>
                            @foreach (LeftMainMenu Menu in MenuList)
                            {
                                if (Menu.LeftSubMenuList != null)
                                {
                                    foreach (LeftSubMenu SubMenu in Menu.LeftSubMenuList)
                                    {
                                        if (SubMenu.MainMenuId == Menu.MenuId)
                                        {
                                <li><a href="@SubMenu.SubURLLink">@SubMenu.SubMenuName</a></li>
                                        }
                                    }
                                }
                            }
                        </ul>
                    </li>
                </ul>

            </aside>
            <div class="clear"></div>
        </div>
        <footer>
            <div class="footer-bottom">
                <p>&copy; YourSite 2014. <a href="http://zypopwebtemplates.com/">Free CSS Website Templates</a> by ZyPOP</p>
            </div>
        </footer>
    </div>

</body>
</html>
